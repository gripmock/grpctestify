--- ADDRESS ---
localhost:50056

--- ENDPOINT ---
shopflow.ShopFlowService/CreateProduct

--- REQUEST ---
{
    "name": "Premium Gaming Mouse",
    "description": "High-precision gaming mouse with RGB lighting",
    "price": 79.99,
    "currency": "USD",
    "stock_quantity": 100,
    "categories": ["Electronics", "Gaming", "Peripherals"],
    "attributes": {
        "brand": "GameTech",
        "color": "Black",
        "dpi": "16000",
        "connectivity": "USB-C"
    },
    "sku": "GT-GM-004",
    "image_urls": ["https://example.com/mouse1.jpg", "https://example.com/mouse2.jpg"]
}

--- ASSERTS ---
.success == true
.product.id | type == "string"
.product.id | test("^prod_")
.product.name == "Premium Gaming Mouse"
.product.description | test("gaming")
.product.price == 79.99
.product.currency == "USD"
.product.stock_quantity == 100
.product.categories | length == 3
.product.categories | index("Gaming") != null
.product.attributes.brand == "GameTech"
.product.attributes.dpi == "16000"
.product.sku == "GT-GM-004"
.product.image_urls | length == 2
.product.active == true
.product.rating == 0.0
.product.review_count == 0
.created_at | type == "string"
.updated_at | type == "string"

--- OPTIONS ---
timeout: 30
redact: ["created_at", "updated_at"]
