--- ADDRESS ---
localhost:50056

--- TLS ---
ca_cert: ./../server/tls/ca-cert.pem
cert: ./../server/tls/client-cert.pem
key: ./../server/tls/client-key.pem
server_name: localhost
insecure_skip_verify: false

--- ENDPOINT ---
shopflow.ShopFlowService/CreateProduct

--- REQUEST ---
{
    "name": "Secure Premium Laptop",
    "description": "High-security business laptop with encryption",
    "price": 2499.99,
    "currency": "USD",
    "stock_quantity": 25,
    "categories": ["Electronics", "Computers", "Security"],
    "attributes": {
        "brand": "SecureTech",
        "model": "ST-LP-001",
        "security": "Hardware encryption",
        "warranty": "3 years"
    },
    "sku": "ST-LP-001",
    "image_urls": ["https://example.com/laptop1.jpg"]
}

--- ASSERTS ---
.success == true
.product.id | type == "string"
.product.id | test("^prod_")
.product.name == "Secure Premium Laptop"
.product.description | test("encryption")
.product.price == 2499.99
.product.currency == "USD"
.product.stock_quantity == 25
.product.categories | length == 3
.product.categories | index("Security") != null
.product.attributes.brand == "SecureTech"
.product.attributes.security == "Hardware encryption"
.product.sku == "ST-LP-001"
.product.active == true
.created_at | type == "string"
.updated_at | type == "string"

--- OPTIONS ---
timeout: 30
redact: ["created_at", "updated_at"]
