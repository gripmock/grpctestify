--- ADDRESS ---
localhost:4770

--- ENDPOINT ---
payment.PaymentService/StreamTransactions

--- REQUEST ---
{
  "account_ids": ["acc_001", "acc_002"],
  "transaction_types": ["payment", "refund"],
  "min_amount": 50.0,
  "max_amount": 1000.0
}

--- ASSERTS ---
.transaction_id | test("txn_.*")
.account_id == "acc_001"
.transaction_type == "payment"
.amount >= 50.0
.amount <= 1000.0
.currency == "USD"
.status == "approved"
.risk_assessment.risk_level == "low"
.risk_assessment.risk_score < 0.5
.metadata.merchant == "Sample Merchant"
.metadata.category == "retail"

--- OPTIONS ---
timeout: 15
